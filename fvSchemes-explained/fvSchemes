ddtSchemes // Guide
{
    //default         Euler; //Most Stable:        
    //default         CrankNicolson 0.9; // 0 = Euler, 1 = Pure CrankNicolson. START HERE
    //default         backward; //Most Accurate:      


    default         steadyState; //Only steady-state:  
}

gradSchemes // Guide
{
// Gauss cellLimited cellLimited<Venkatakrishnan> cellLimited<cubic> cellMDLimited edgeCellsLeastSquares
// faceLimited faceMDLimited fourth iterativeGauss leastSquares pointCellsLeastSquares

    default         Gauss linear; //Most Stable. START HERE
    //default         leastSquares; //Most Accurate
    
    // Add limiter for stability
    //default             cellMDLimited Gauss linear 1.0;
}

divSchemes 
{
// CoBlended Gamma GammaV LUST MUSCL MUSCLV Minmod MinmodV OSPRE OSPREV Phi QUICK QUICKV
// SFCD SFCDV SuperBee SuperBeeV UMIST UMISTV biLinearFit blended cellCoBlended clippedLinear cubic cubicUpwindFit
// deferredCorrection downwind filteredLinear filteredLinear2 filteredLinear2V filteredLinear3 filteredLinear3V
// fixedBlended limitWith limitedCubic limitedCubicV limitedLinear limitedLinearV limiterBlended linear linearFit
// linearPureUpwindFit linearUpwind linearUpwindV localBlended localMax localMin midPoint outletStabilised pointLinear
// quadraticFit quadraticLinearFit quadraticLinearUpwindFit quadraticUpwindFit reverseLinear skewCorrected upwind
// vanAlbada vanAlbadaV vanLeer vanLeerV weighted weightedFlux

    default         none; // Best practice to make sure user specifies all divSchemes
    
    //Steady state schemes need "bounded" keyword:   bounded Gauss limitedLinear 1.0;
    
    //Vector field (velocity) use "v". limitedLinearV vs limitedLinear
    
    //Most Stable:    Gauss upwind;
    //Average: note, the order isn't exact here
    //       	      Gauss limitedLinear 1.0; // START HERE
    //                Gauss linearUpwind <gradScheme>; // Must specify gradScheme
    //                Gauss vanLeer;
    //                Gauss QUICK;
    //Most Accurate:  Gauss linear


    div(phi,U)      bounded Gauss linearUpwindV; //uncorrected; //bounded Gauss limitedLinearV 1.0;
    
    turbulence      bounded Gauss limitedLinear 1.0;
    div(phi,k)      $turbulence;
    div(phi,epsilon) $turbulence;
    div(phi,omega)  $turbulence;
    
    div(nonlinearStress)            Gauss linear;
    div((nuEff*dev2(T(grad(U)))))   Gauss linear; // Viscosity term
}

laplacianSchemes // Guide
{
    //Pattern:        Gauss <interoplation> <snGrad>;
    
    default         Gauss linear limited 0.5;
}

interpolationSchemes // Guide
{
    default         linear;
}

snGradSchemes
{
// corrected faceCorrected limited linearFit orthogonal quadraticFit relaxed skewCorrected uncorrected

    //use checkMesh
    //default         			orthogonal; //Max non-ortho < 0.5 deg:    
    //default         			uncorrected; //Max non-ortho < 5   deg:    
    //default         			corrected; //Max non-ortho < 70  deg:    
    default         			limited 0.5;//Max non-ortho < 80  deg:    
    //Max non-ortho > 80  deg:    	// Make a better mesh.
}

